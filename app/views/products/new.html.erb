<div class="col-md-offset-3 col-md-6">
	<%= form_for @product do |f| %>
	<%#= @product.errors.messages %>
	  <p>
	    <%= f.label :name %><br>
	    <%= f.text_field :name, class: "form-control" %>
	  </p>
	 
	  <p>
	    <%= f.label :price %><br>
	    <%= f.text_area :price, class: "form-control" %>
	  </p>
	 
	  <p>
	    <%= f.submit class: "btn btn-success" %>
	  </p>
	<% end %>
</div>